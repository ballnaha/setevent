// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User - สำหรับ Admin/Staff
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  username      String?   @unique // เพิ่มสำหรับ Username Login
  password      String? // เพิ่มสำหรับ Credentials Login
  role          String    @default("admin") // admin, sales, user
  position      String? // ตำแหน่งเจ้าหน้าที่
  status        String    @default("active") // active, disabled
  accounts      Account[]
  sessions      Session[]
  events        Event[] // งานที่ดูแล (sales)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Customer - ลูกค้าจาก LINE
model Customer {
  id                String    @id @default(cuid())
  lineUid           String    @unique
  displayName       String?
  pictureUrl        String?
  phone             String?
  email             String?
  companyName       String?
  status            String    @default("new") // new, pending, active
  lastActiveEventId String? // Event ID ที่ลูกค้ากำลังคุยอยู่ล่าสุด (สำหรับ context)
  firstMessageAt    DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  events   Event[]
  chatLogs ChatLog[]
}

// Event - งาน Event
model Event {
  id          String    @id @default(cuid())
  customerId  String
  eventName   String
  inviteCode  String    @unique
  eventDate   DateTime?
  venue       String?
  description String?   @db.Text
  status      String    @default("draft") // draft, confirmed, in-progress, completed, cancelled
  totalPrice  Decimal?  @db.Decimal(12, 2)
  notes       String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  customer  Customer        @relation(fields: [customerId], references: [id], onDelete: Cascade)
  sales     User?           @relation(fields: [salesId], references: [id], onDelete: SetNull)
  salesId   String?
  bookings  Booking[]
  timelines EventTimeline[]
  chatLogs  ChatLog[]
  review    Review?
}

// Review - รีวิวงานจากลูกค้า
model Review {
  id        String   @id @default(cuid())
  rating    Int // 1-5
  comment   String?  @db.Text
  eventId   String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

// EventTimeline - Timeline ของงาน (แจ้งความคืบหน้า)
model EventTimeline {
  id          String    @id @default(cuid())
  eventId     String
  title       String
  description String?
  images      String?   @db.Text // JSON Array of image URLs: ["url1", "url2"]
  progress    Int? // เปอร์เซ็นต์ความคืบหน้า 0-100
  status      String    @default("pending") // pending, in-progress, completed
  order       Int       @default(0)
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

// Booking - รายการจองอุปกรณ์/บริการ
model Booking {
  id          String   @id @default(cuid())
  eventId     String
  serviceName String // เครื่องเสียง, ไฟ, เวที, etc.
  quantity    Int      @default(1)
  price       Decimal? @db.Decimal(12, 2)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

// ChatLog - ประวัติแชท
model ChatLog {
  id          String   @id @default(cuid())
  customerId  String
  message     String   @db.Text
  direction   String // inbound, outbound
  messageType String   @default("text") // text, image, sticker
  eventId     String? // Optional: Link chat to specific event
  createdAt   DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  event    Event?   @relation(fields: [eventId], references: [id], onDelete: SetNull)
}

// Category - หมวดหมู่สินค้า (รองรับ Submenu)
model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique // for url e.g. rental, lighting
  description String?  @db.Text
  image       String? // Image for the category card or submenu
  parentId    String? // For nested structure
  order       Int      @default(0)
  status      String   @default("active") // active, inactive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent   Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children Category[] @relation("CategoryHierarchy")
  products Product[]
}

// Product - สินค้า
model Product {
  id          String   @id @default(cuid())
  categoryId  String
  name        String
  slug        String   @unique
  description String?  @db.Text
  price       Decimal? @db.Decimal(12, 2)
  priceUnit   String? // e.g. "ต่อตร.ม.", "/ชิ้น", "/วัน"
  status      String   @default("active")
  images      String?  @db.Text // JSON Array of image URLs
  features    String?  @db.Text // JSON Array of features
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

// Promotion - โปรโมชั่น
model Promotion {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  image       String? // Main display image
  price       String? // Display text for price (e.g. "฿59,000", "Start ฿9,900")
  period      String? // e.g. "Jan - Mar 2026"
  features    String?  @db.Text // JSON Array of objects: [{"label": "Guests", "value": "Up to 200"}]
  status      String   @default("active") // active, inactive
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Portfolio - ผลงาน
model Portfolio {
  id          String   @id @default(cuid())
  title       String
  category    String // Marketing Event, Seminar & Conference, Exhibition, Concert, Wedding, Fixed Installation
  image       String? // Main display image
  description String?  @db.Text
  likes       Int      @default(0)
  views       Int      @default(0)
  status      String   @default("active") // active, inactive
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Design - ดีไซน์งานอีเวนต์
model Design {
  id          String   @id @default(cuid())
  title       String
  category    String // Wedding, Corporate, Dinner, Party, Concert, Fashion
  image       String?  @db.Text // Main display image
  description String?  @db.Text
  likes       Int      @default(0)
  views       Int      @default(0)
  status      String   @default("active") // active, inactive
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// SiteSettings - ข้อมูลติดต่อและ settings ของเว็บ
model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique // e.g., "contact", "social"
  value     String   @db.Text // JSON string
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// FAQ - คำถามที่พบบ่อย
model FAQ {
  id        String   @id @default(cuid())
  question  String   @db.Text
  answer    String   @db.Text
  category  String   @default("ทั่วไป")
  status    String   @default("active") // active, inactive
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Blog - บทความ
model Blog {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String?  @db.Text
  content     String?  @db.Text
  coverImage  String?  @db.Text
  author      String?  @default("Admin")
  category    String?  @default("General")
  views       Int      @default(0)
  status      String   @default("published") // published, draft
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Valentine Models
model ValentineCard {
  id              String   @id @default(cuid())
  slug            String   @unique
  jobName         String?  // Internal name for admin
  title           String
  openingText     String?
  greeting        String?
  subtitle        String?
  message         String?  @db.Text
  signer          String?
  backgroundColor String?  @default("#FFF0F3")
  status          String   @default("active") // active, inactive
  disabledAt      DateTime? // วันที่จะ disabled อัตโนมัติ (ถ้าไม่ใส่ = ไม่มีวันหมดอายุ)

  // Background Music (เลือกใช้ได้ทีละอันเท่านั้น - MP3 จะถูกใช้ก่อนถ้ามีทั้งคู่)
  backgroundMusicYoutubeId String?  // YouTube Video ID for background music
  backgroundMusicUrl       String?  @db.Text // Uploaded MP3 file URL
  
  // UI Customization
  swipeHintColor           String?  @default("white") // white, red
  swipeHintText            String?  @default("Swipe to see more")

  // Customer Contact Info (Optional)
  customerPhone            String?
  customerAddress          String?  @db.Text
  note                     String?  @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  memories        ValentineMemory[]
  orderedProducts ValentineProduct[]
}

model ValentineMemory {
  id        String   @id @default(cuid())
  cardId    String
  type      String   @default("image") // image, youtube, tiktok, video
  url       String   @db.Text
  caption   String?
  thumbnail String?  @db.Text
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  card ValentineCard @relation(fields: [cardId], references: [id], onDelete: Cascade)
}

// Valentine Catalog Models
model ValentineProduct {
  id            String   @id @default(cuid())
  name          String
  category      String   @default("General")
  price         Float
  originalPrice Float?   // For discount display
  description   String?  @db.Text
  image         String?  // Main image URL (will be used as thumbnail in list)
  isHot         Boolean  @default(false)
  isNew         Boolean  @default(false)
  status        String   @default("active") // active, inactive, out_of_stock
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  images        ValentineProductImage[]
  cards         ValentineCard[]
}

model ValentineProductImage {
  id        String   @id @default(cuid())
  productId String
  url       String   @db.Text
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product ValentineProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
}
