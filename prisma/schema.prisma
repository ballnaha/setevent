// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User - สำหรับ Admin/Staff
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("admin") // admin, staff
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Customer - ลูกค้าจาก LINE
model Customer {
  id            String    @id @default(cuid())
  lineUid       String    @unique
  displayName   String?
  pictureUrl    String?
  phone         String?
  email         String?
  companyName   String?
  status        String    @default("new") // new, pending, active
  firstMessageAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  events        Event[]
  chatLogs      ChatLog[]
}

// Event - งาน Event
model Event {
  id          String   @id @default(cuid())
  customerId  String
  eventName   String
  inviteCode  String   @unique
  eventDate   DateTime?
  venue       String?
  description String?  @db.Text
  status      String   @default("draft") // draft, confirmed, in-progress, completed, cancelled
  totalPrice  Decimal? @db.Decimal(12, 2)
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  bookings    Booking[]
}

// Booking - รายการจองอุปกรณ์/บริการ
model Booking {
  id          String   @id @default(cuid())
  eventId     String
  serviceName String   // เครื่องเสียง, ไฟ, เวที, etc.
  quantity    Int      @default(1)
  price       Decimal? @db.Decimal(12, 2)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

// ChatLog - ประวัติแชท
model ChatLog {
  id          String   @id @default(cuid())
  customerId  String
  message     String   @db.Text
  direction   String   // inbound, outbound
  messageType String   @default("text") // text, image, sticker
  createdAt   DateTime @default(now())

  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}
